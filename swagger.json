        "responses": {
        "202":{
        "description": "OK",
        "examples": {
        "application/json": [
        {
        "ProductoID": 58,
        "Nombre": "Metro r26",
        "precio":"150",
        "cantidad":"16",
        "codigo": "891"
        }
        
        ]
        },
        "schema":{
        "$ref": "#/definitions/Institutos"
